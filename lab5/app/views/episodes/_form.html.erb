<%= form_for @episode do |f| %>	
	<div class="field">
		<%= f.label :title %><br/>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :description %><br/>
		<%= f.text_area :description %>
	</div>
	<div class="field">
		<%= f.label :episode_number %><br/>
		<%= f.number_field :episode_number %>
	</div>
	<div class="field">
		<%= f.submit %>
	</div>
<% end %>